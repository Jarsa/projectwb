<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_request_wizard_view" model="ir.ui.view">
        <field name="name">Wizard request quotations</field>
        <field name="model">purchase.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Make a purchase request">
                <header class="text-center">
                    <separator string="Purchase Request"/>
                </header>
                <field name="item_ids">
                    <tree create="0" editable="bottom">
                        <field name="analytic_account_id"/>
                        <field name="product_id"/>
                        <field name="uom_id"/>
                        <field name="qty"/>
                        <field name="real_qty"/>
                        <field name="requested_qty"/>
                        <field id="qty_to_request" name="qty_to_request"/>
                    </tree>
                </field>
                <footer>
                    <button class="oe_highlight" name="make_request" string="Confirm" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script src="/task_resource/static/js/inputs_behavior.js" type="text/javascript"/>
        </xpath>
    </template>
    <act_window id="launch_session_wizard" key2="client_action_multi" name="Add a Purchase Request" res_model="purchase.request.wizard" src_model="analytic.resource.plan.line" target="new" view_mode="form"/>
</odoo>
