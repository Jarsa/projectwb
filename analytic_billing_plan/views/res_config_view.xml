<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_project_billing_plan_settings_form">
        <field name="name">view.project.billing.plan.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-string='Project']" position="inside">
                <h2>Billing Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="billing_request_journal_id" string="Billing Request Journal" class="col-xs-3 col-md-3 o_light_label"/>
                                    <field name="billing_request_journal_id" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="product_id" string="Billing Request Product" class="col-xs-3 col-md-3 o_light_label"/>
                                    <field name="product_id" class="oe_inline" required="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
