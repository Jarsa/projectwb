<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_project_billing_plan_settings_form" model="ir.ui.view">
        <field name="name">view.project.billing.plan.settings.form</field>
        <field name="model">project.config.settings</field>
        <field name="inherit_id" ref="project.view_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <group string="Billing Settings">
                    <field invisible="1" name="company_id"/>
                    <div>
                        <div>
                            <label for="bridge_account_id"/>
                            <field class="oe_inline" name="bridge_account_id"/>
                        </div>
                        <div>
                            <label for="billing_request_journal_id"/>
                            <field class="oe_inline" name="billing_request_journal_id"/>
                        </div>
                        <div>
                            <label for="product_id"/>
                            <field class="oe_inline" name="product_id"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
